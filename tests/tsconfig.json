{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "../src/*": ["../src/*"]
    }
  },
  "include": ["e2e/**/*.ts", "../src/utils/**/*.ts", "../src/types/**/*.ts"]
}
